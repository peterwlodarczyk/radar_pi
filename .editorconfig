# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,htm,html}]
charset = utf-8
indent_style = space
indent_size = 4
indent_brace_style = K&R

# 4 space indentation
[*.{py,sh}]
charset = utf-8
indent_style = space
indent_size = 4

[*.bat]
end_of_line = crlf

# 2 tab indentation
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 2
#tab_width = 4
indent_brace_style = K&R

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
